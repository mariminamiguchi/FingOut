<% if logged_in? %>
  <% if current_user.liking?(plan) %>
    <%= form_with(model: current_user.favorites.find_by(plan_id: plan.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :plan_id, plan.id %>
      <%= f.submit 'お気に入り削除', class: 'btn btn-danger' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :plan_id, plan.id %>
      <%= f.submit 'お気に入り追加', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
 <% else %>
   <%= link_to 'ユーザー登録をしてお気に入りに追加', signup_path, class: 'btn btn-lg btn-primary' %>
  <% end %>