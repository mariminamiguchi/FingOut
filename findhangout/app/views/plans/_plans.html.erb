<% @plans.each_slice(2) do |plans| %>
	<div class="row">
		<% plans.each do |plan| %>
			<div class="plan">
				<a href="<%= plan_path(plan.id) %>">
					<h5><%= plan.name %></h5>
					<div class="photospace"><%= attachment_image_tag plan, :topphoto, format: 'jpeg'%></div>
					<div id="outline"><p><%= plan.outline %></p></div>
				</a>
				<div class="by">
					<p>by<%= link_to plan.user.name, user_path(plan.user) %></p>
				</div>
			</div>
		<% end %>
	</div>
<% end %>
<%= paginate @plans %>
