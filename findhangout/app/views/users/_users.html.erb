<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <div>
          <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: 'default.jpg', id: 'user_index_image' %>
        </div>
        <div class="media-body">
          <div style="margin-left: 10px;">
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィール', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>