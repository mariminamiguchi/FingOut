<div class="col-sm-6 offset-sm-3">
  <%= form_with(model: [@plan, @course], url: plan_courses_post_path, local: true) do |f| %>
 

    <div class="form-group">
      <%= f.label :number, 'コース番号' %>
      <%= f.text_field :number, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :headding, '見出し' %>
      <%= f.text_field :headding, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :text, '説明' %>
      <%= f.text_area :text, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :photo, '画像' %><br>
      <%= f.attachment_field :photo %>
    </div>
    
    <%= f.submit 'コースを追加', class: 'btn btn-primary btn-block' %>
  <% end %>
</div> 