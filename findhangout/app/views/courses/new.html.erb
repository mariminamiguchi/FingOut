<div class="col-sm-6 offset-sm-3">
  <%= form_with(model: [@plan, @course], url: plan_courses_post_path, local: true) do |f| %>
 

    <div class="form-group">
      <%= f.label :number, 'Number' %>
      <%= f.text_field :number, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :text, 'Text' %>
      <%= f.text_area :text, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :photo, 'photo' %><br>
      <%= f.attachment_field :photo %>
    </div>
    
    <%= f.submit 'courses', class: 'btn btn-primary btn-block' %>
  <% end %>
</div> 